@page "/Index"
@inject IJSRuntime JSRuntime
<style>
    body {
        background: #ffffff;
    }
</style>

<NavMenu></NavMenu>
<br />
<div id="IndexCarousel" class="carousel slide" data-ride="carousel" style="height:580px" data-interval="auto">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#IndexCarousel1" data-slide-to="0" class="active"></li>
        <li data-target="#IndexCarousel2" data-slide-to="1"></li>
        <li data-target="#IndexCarousel3" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="../css/mobile1.webp" alt="Los Angeles" style="width:100%;height:580px">
            <div class="carousel-caption">
                <h3>Mobiles</h3>
                <p>Collects wide range of mobiles from low budget to high budget that too with warranties</p>
            </div>
        </div>

        <div class="item">
            <img src="../css/watches2.jpg" alt="Chicago" style="width:100%;height:580px">
            <div class="carousel-caption">
                <h3>Watches</h3>
                <p>Collects world's costliest watches with rare diamond piercings</p>
            </div>
        </div>

        <div class="item">
            <img src="../css/drones3.jpg" alt="New York" style="width:100%;height:580px">
            <div class="carousel-caption">
                <h3>Drones</h3>
                <p>Collects home-level to industry-level drones with more years of warranty and standards</p>
            </div>
        </div>

    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#IndexCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#IndexCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
